module Stroma
  module Hooks
    VALID_HOOK_TYPES: Array[Symbol]

    # Note: Hook uses Data.define but RBS should NOT inherit from Data
    # per RBS documentation for proper type checking
    class Hook
      attr_reader type: Symbol
      attr_reader target_key: Symbol
      attr_reader extension: Module

      def initialize: (Symbol type, Symbol target_key, Module extension) -> void
                    | (type: Symbol, target_key: Symbol, extension: Module) -> void

      def before?: () -> bool

      def after?: () -> bool
    end
  end
end
